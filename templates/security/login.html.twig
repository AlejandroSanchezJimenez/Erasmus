{% extends 'base.html.twig' %}

{% block body %}
	{% block header%}
		{{parent()}}
	{% endblock %}
	{% block menu %}
		{{parent()}}
	{% endblock %}
	{% block separador %}
		{{parent()}}
	{% endblock %}
	{% block javascripts %}
		{{parent()}}
	{% endblock %}
	<div class="contenido">
		<center>
			<div class="login-container">
				<center>
					<p class="tit">Erasmus login</p>
				</center>
				<center>
					<p class="media">Es necesario loguearse para continuar.</p>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						<div class="form-group">
							<label for="inputDNI">D N I</label>
							<input type="text" value="{{ last_username }}" name="_username" id="inputDNI" class="form-control" autocomplete="username" required autofocus placeholder="DNI">
						</div>

						<div class="form-group">
							<label for="inputPassword">Password</label>
							<input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Contraseña">
						</div><br><br>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<div class="form-group">
							<button type="submit">
								Iniciar sesión
							</button>
						</div><br>
					</form>
				</div>
			</center>
		</div>

	{% endblock %}

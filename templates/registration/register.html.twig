{% extends 'base.html.twig' %}

{% block body %}
	{% block header%}
		{{parent()}}
	{% endblock %}
	{% block menu %}
		{{parent()}}
	{% endblock %}
	{% block separador %}
		{{parent()}}
	{% endblock %}
	{% block javascripts %}
		{{parent()}}
	{% endblock %}

	<div class="contenido">
		<center>
			<div class="register-container">
				<center>
					<h1>Registro</h1>

					{{ form_start(registrationForm, {'attr': {'data-valida': 'nombre'}}) }}

					<div class="form-group">
						{{ form_row(registrationForm.DNI, { 'label': 'DNI', 'attr': {'data-valida': 'DNI', 'placeholder': 'Ingrese su DNI', 'class': 'inputs', 'id': 'dni'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.Nombre, { 'label': 'Nombre', 'attr': {'data-valida': 'nombre', 'placeholder': 'Ingrese su nombre', 'class': 'inputs', 'id': 'nombre'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.Apellidos, { 'label': 'Apellidos', 'attr': {'data-valida': 'nombre', 'placeholder': 'Ingrese sus apellidos', 'class': 'inputs', 'id': 'apellidos'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.plainPassword, { 'label': 'Password', 'attr': {'data-valida': 'nombre', 'placeholder': 'Ingrese su contraseña', 'class': 'inputs', 'id': 'contraseña'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.Fecha_nac, { 'label': 'Fecha de Nacimiento', 'attr': {'data-valida': 'fecha', 'placeholder': 'Seleccione su fecha de nacimiento', 'class': 'inputs', 'id': 'fecha'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.Curso, { 'label': 'Curso', 'attr': {'data-valida': 'nombre', 'placeholder': 'Ingrese su curso', 'class': 'inputs', 'id': 'curso'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.Tlf, { 'label': 'Teléfono', 'attr': {'data-valida': 'nombre', 'placeholder': 'Ingrese su número de teléfono', 'class': 'inputs', 'id': 'tlf'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.Domicilio, { 'label': 'Domicilio', 'attr': {'data-valida': 'nombre', 'placeholder': 'Ingrese su domicilio', 'class': 'inputs', 'id': 'domicilio'} }) }}
					</div>

					<div class="form-group">
						{{ form_row(registrationForm.Correo, { 'label': 'Correo', 'attr': {'data-valida': 'correo', 'placeholder': 'Ingrese su correo electrónico', 'class': 'inputs', 'id': 'correo'} }) }}
					</div>


					<div class="form-group">
						<button type="submit" class="btn" disabled>Registrar</button>
					</div>

					{{ form_end(registrationForm) }}


				</center>
			</div>
		</center>
	</div>
{% endblock %}
